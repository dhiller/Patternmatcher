<?xml version="1.0" encoding="UTF-8"?>
<project name="PatternMatcher" default="jar" basedir=".">
	<description>Creates a runnable jar of PatternMatcher.</description>

	<target name="jar">
	
		<mkdir dir="bin" />
		
		<javac 	srcdir="src/main/java"
			destdir="bin"
			/>
	
		<mkdir dir="dist" />

		<manifest file="dist/PatternMatcher.manifest">
			<attribute name="Manifest-Version" value="1.0" />
			<attribute name="Main-Class" value="de.dhiller.patternmatcher.PatternMatcher"/>
			<attribute name="Class-path" value=""/>
		</manifest>

		<jar destfile="dist/PatternMatcher.jar" basedir="bin" manifest="dist/PatternMatcher.manifest">
			<include name="de/**" />
		</jar>
	</target>

</project>
